<!-- app/views/books/destroy.html.erb -->

<%= link_to "Destroy Book", book_path(@book), method: :delete, data: { confirm: "Are you sure you want to destroy this book?" }, class: "btn btn-danger" %>

<div id="confirmation-modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Confirm Destruction</h4>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to destroy this book?</p>
      </div>
      <div class="modal-footer">
        <%= link_to "Cancel", "#", class: "btn btn-default", data: { dismiss: "modal" } %>
        <%= link_to "Yes, I'm sure", book_path(@book), method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
